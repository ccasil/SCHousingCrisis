<!DOCTYPE html>
<html>
<head>
	<title>Cruz</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'defaults', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
	<script src="/assets/modernizr.js"></script>
	<script src="/assets/jquery-2.1.4.js"></script>
	<script src="/assets/velocity.min.js"></script>
	<script src="/assets/main.js"></script>
	<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
	<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
</head>
<body>

		<ul>
		
		<% if user_signed_in? %>
			<li class="<%= 'selected' if current_page?(edit_user_registration_path)%>">
				<%= link_to edit_user_registration_path, data: {menu: "users/edit"} do %>
				<%= image_tag "home.svg" %>
			 <br>Edit Profile
			<% end %>
			</li>
			
			<li class="<%= 'selected' if current_page?(destroy_user_session_path)%>">
			<%= link_to "Logout" , destroy_user_session_path, :method => :delete %>
			<%= image_tag "home.svg" %>
			 <br>Logout
		</li>
            <% else %>
		
			
		<li class="<%= 'selected' if current_page?(new_user_registration_path)%>">
             <%= link_to new_user_registration_path, data: {menu: "/users/sign_up"} do %>
			 <%= image_tag "home.svg" %>
			 <br>Sign Up
         <% end %>
		</li>
		
		<li class="<%= 'selected' if current_page?(new_user_session_path)%>">
             <%= link_to new_user_session_path, data: {menu: "/users/sign_in"} do %>
			 <%= image_tag "home.svg" %>
			 <br>Login
         <% end %>
		</li>
		
		<% end %>
		
		
		
		
		
		<li class="<%= 'selected' if current_page?(root_path) %>">
	
				<%= link_to root_path, data: {menu: "welcome"} do %>
					<%= image_tag "home.svg" %>
					<br>Home
				<% end %>

		</li>	
					
		<li class="<%= 'selected' if current_page?(contact_path) %>">
		
				<%= link_to contact_path, data: {menu: "contact"} do %>
					<%= image_tag "contact.svg" %>
					<br>Contact
				<% end %>

		</li>

		<li class="<%= 'selected' if current_page?(geolocs_path) %>">
		
				<%= link_to geolocs_path, data: {menu: "geolocs"} do %>
					<%= image_tag "map.svg" %>
					<br>Map
				<% end %>

		</li>		
		
		<li class="<%= 'selected' if current_page?(graph_path) %>">

				<%= link_to graph_path, data: {menu: "graph"} do %>
					<%= image_tag "map.svg" %>
					<br>Graph
				<% end %>

		</li>
	
	</ul>
</nav>

        <% if notice %>
             <p class="alert alert-success"><%= notice %></p>
         <% end %>
         <% if alert %>
             <p class="alert alert-danger"><%= alert %></p>
         <% end %>

<%= yield %>

</body>
</html>
