<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<!-- only if you need custom infoboxes -->

  <div class="jumbotron">
    <img src="/assets/NaturalBridges.jpg">
  </div>
  
<div class="container">
    <!-- Search Bar method for housing -->
    <%= form_tag listings_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search], :class => 'form-control', :placeholder => 'Search for a listing', :style => 'width: 400px; margin: 0 !important' %> 
      <%= button_tag "Search", :class => 'btn btn-primary', :name => nil %>
    <% end %>
    <br>
    
    <!-- Header of the listing columns -->
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th style="padding-left: 5px">Price Per Month</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <!-- Body of the listing columns -->
      <tbody>
        <% @listings.each do |listing| %>
          <tr>
            <td><%= listing.name %></td>
            <td><%= listing.phone %></td>
            <td><%= listing.email %></td>
            <td><%= listing.street %></td>
            <td><%= listing.city %></td>
            <td><%= listing.state %></td>
            <td><%= listing.zip %></td>
            <td style="padding-left: 5px"><%= listing.priceperm %></td>
            <td><%= link_to 'Show', listing %></td>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <br><%= will_paginate @user %><br>

  <% if can? :create, Listing %>
    <%= link_to 'New Listing', new_listing_path %>
  <% end %>


  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  <script type="text/javascript">
  var map;
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
  </script>
</div>